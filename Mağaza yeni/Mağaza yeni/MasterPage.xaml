                    <Label Content="Sepetim" Foreground="White" FontSize="18" Margin="20,20,0,10" HorizontalAlignment="Left"/>
                    <Label Content="(0 Adet)"  FontSize="18" Margin="0,20,0,10" HorizontalAlignment="Left" Foreground="LightGreen" />

